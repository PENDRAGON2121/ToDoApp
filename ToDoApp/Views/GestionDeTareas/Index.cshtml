@model IEnumerable<ToDoApp.Model.Tarea>

@{
    ViewData["Title"] = "Lista de Tareas";
}

<div class="container" style="background-color: #f4f4f9; padding: 20px; border-radius: 10px; max-width: 900px; margin: auto; font-family: 'Helvetica Neue', sans-serif;">
    <h1 style="color: #333333; text-align: center; font-weight: bold; margin-bottom: 30px;">Lista de Tareas</h1>

    <div style="display: flex; justify-content: center; margin-bottom: 20px;">
        <a asp-action="Create" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; color: #fff; padding: 10px 20px; font-size: 16px;">Crear Nueva</a>
    </div>
    <table class="table table-hover" style="border-collapse: separate; border-spacing: 0 10px;">
        <thead style="background-color: #333333; color: #fff; text-transform: uppercase;">
            <tr>
                <th style="padding: 10px;">@Html.DisplayNameFor(model => model.ID)</th>
                <th style="padding: 10px;">@Html.DisplayNameFor(model => model.Titulo)</th>
                <th style="padding: 10px;">@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th style="padding: 10px;">@Html.DisplayNameFor(model => model.Estado)</th>
                <th style="padding: 10px;">@Html.DisplayNameFor(model => model.Prioridad)</th>
                <th style="padding: 10px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color: #fff; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 5px;">
                    <td style="padding: 10px; border-top: none;">@Html.DisplayFor(modelItem => item.ID)</td>
                    <td style="padding: 10px; border-top: none;">@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td style="padding: 10px; border-top: none;">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td style="padding: 10px; border-top: none;">@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td style="padding: 10px; border-top: none;">@Html.DisplayFor(modelItem => item.Prioridad)</td>
                    <td style="padding: 10px; border-top: none;">
                        <div class="btn-group" role="group" aria-label="Acciones" style="display: flex; justify-content: space-evenly;">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-primary", style = "background-color: #007bff; border-color: #007bff; color: #fff; margin-right: 5px;" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn btn-info", style = "background-color: #17a2b8; border-color: #17a2b8; color: #fff; margin-right: 5px;" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", style = "background-color: #dc3545; border-color: #dc3545; color: #fff;" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
