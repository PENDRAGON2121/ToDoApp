@model ToDoApp.Model.Tarea

@{
    ViewData["Title"] = "Crear Tarea";
}

<div class="container" style="background-color: #f4f4f9; padding: 20px; border-radius: 10px; max-width: 600px; margin: auto; font-family: 'Helvetica Neue', sans-serif;">
    <h1 style="color: #333333; text-align: center; font-weight: bold; margin-bottom: 30px;">Crear Tarea</h1>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>

                <div class="form-group">
                    <label asp-for="Titulo" class="control-label" style="font-weight: bold; color: #333333;"></label>
                    <input asp-for="Titulo" class="form-control" style="border: 2px solid #007bff; border-radius: 5px;" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label" style="font-weight: bold; color: #333333;"></label>
                    <input asp-for="Descripcion" class="form-control" style="border: 2px solid #007bff; border-radius: 5px;" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label" style="font-weight: bold; color: #333333;"></label>
                    <select asp-for="Estado" class="form-control" style="border: 2px solid #007bff; border-radius: 5px;">
                        <option value="Completo">Completo</option>
                        <option value="Pendiente">Pendiente</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prioridad" class="control-label" style="font-weight: bold; color: #333333;"></label>
                    <select asp-for="Prioridad" class="form-control" style="border: 2px solid #007bff; border-radius: 5px;">
                        <option value="1">Baja</option>
                        <option value="2">Media</option>
                        <option value="3">Alta</option>
                    </select>
                    <span asp-validation-for="Prioridad" class="text-danger"></span>
                </div>
                <div class="form-group" style="text-align: center; margin-top: 20px;">
                    <input type="submit" value="Crear" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; color: #fff; padding: 10px 20px; font-size: 16px;" />
                </div>
            </form>
        </div>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index" class="btn btn-secondary" style="background-color: #6c757d; border-color: #6c757d; color: #fff; padding: 10px 20px; font-size: 16px;">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
